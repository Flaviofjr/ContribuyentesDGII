@model IEnumerable<ContribuyenteDTO>
@{
    ViewData["Title"] = "Contribuyentes";
}
@section HeadBlock {
<link rel="stylesheet" media="screen, print" href="~/lib/datatables/datatables.css">
@*<link href="https://cdn.datatables.net/v/bs5/dt-1.13.4/b-2.3.6/b-html5-2.3.6/date-1.4.1/fh-3.3.2/r-2.4.1/rg-1.3.1/rr-1.3.3/sc-2.1.1/sl-1.6.2/datatables.min.css" rel="stylesheet"/>*@
}
<div class="text-center">
    <h1 class="display-4">Contribuyentes</h1>
</div>

<div class="row">
    <div class="col-md-12 col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="dt-basic-example" class="table table-bordered table-hover table-striped w-100">
                        <thead>
                            <tr>
                                <th>
                                    RNC / CÉDULA
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Tipo
                                </th>
                                <th>
                                    Estatus
                                </th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.RncCedula)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tipo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Estatus)
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.RncCedula" class="btn btn-sm btn-primary">Detalles</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{ 
    @*<script src="https://cdn.datatables.net/v/bs5/dt-1.13.4/b-2.3.6/b-html5-2.3.6/date-1.4.1/fh-3.3.2/r-2.4.1/rg-1.3.1/rr-1.3.3/sc-2.1.1/sl-1.6.2/datatables.min.js"></script>*@
    <script src="~/lib/datatables/datatables.js"></script>
    <script>
    /* demo scripts for change table color */
    /* change background */
    $(document).ready(function () {
        $('#dt-basic-example').DataTable(
            {
                responsive: true,
                "oLanguage": {
                    "sEmptyTable": "No hay datos para mostrar"
                }
            });
    });
</script>
}